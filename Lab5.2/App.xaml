<Application x:Class="Lab5._2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lab5._2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Загальні ресурси / стилі -->
        <Style x:Key="MainWindowGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="BigButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="TileBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#88555555"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- Фон і кольори гри -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FAF8EF"/>
        <SolidColorBrush x:Key="BoardBrush" Color="#BBADA0"/>
        <SolidColorBrush x:Key="EmptyTileBrush" Color="#CDC1B4"/>

        <!-- Шрифти -->
        <FontFamily x:Key="MainFont">Segoe UI</FontFamily>

        <!-- Score card style -->
        <Style x:Key="ScoreCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Background" Value="#EEE4DA"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCBBAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Best card style (інший колір щоб виділявся) -->
        <Style x:Key="BestCard" TargetType="Border" BasedOn="{StaticResource ScoreCard}">
            <Setter Property="Background" Value="#F6D365"/>
            <Setter Property="BorderBrush" Value="#E0B84A"/>
        </Style>

        <!-- Текст великого числа (score) -->
        <Style x:Key="ScoreNumberText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ScoreLabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.85"/>
        </Style>

    </Application.Resources>
</Application>
