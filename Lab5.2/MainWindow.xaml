<Window x:Class="Lab5._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5._2"
        mc:Ignorable="d"
        Title="2048 — WPF Demo" Height="700" Width="700"
        Background="{StaticResource BackgroundBrush}"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged"
        Closing="Window_Closing">
    <Grid Style="{StaticResource MainWindowGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель: назва, рахунок і кнопки -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <TextBlock Text="2048" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,16,0" DockPanel.Dock="Left"/>

            <!-- Праворуч: Score card, Best card, New Game, Reset Best -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,0,0">

                <!-- Score -->
                <Border Style="{StaticResource ScoreCard}">
                    <StackPanel>
                        <TextBlock Text="Score" Style="{StaticResource ScoreLabelText}" />
                        <TextBlock x:Name="ScoreText" Text="0" Style="{StaticResource ScoreNumberText}" />
                    </StackPanel>
                </Border>

                <!-- Best -->
                <Border Style="{StaticResource BestCard}">
                    <StackPanel>
                        <TextBlock Text="Best" Style="{StaticResource ScoreLabelText}" />
                        <TextBlock x:Name="BestText" Text="0" Style="{StaticResource ScoreNumberText}" />
                    </StackPanel>
                </Border>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                    <Button Style="{StaticResource BigButton}" Click="NewGame_Click">New Game</Button>
                    <Button Style="{StaticResource BigButton}" Click="ResetBest_Click" x:Name="ResetBestButton">Обнулити рейтинг</Button>
                </StackPanel>
            </StackPanel>
        </DockPanel>

        <!-- Ігрова дошка: обгортка BoardBorder забезпечує квадратну область -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="BoardBorder" Background="{StaticResource BoardBrush}" Padding="10" CornerRadius="12">
                <UniformGrid x:Name="BoardGrid" Rows="4" Columns="4" Margin="6" />
            </Border>
        </Grid>

        <!-- Підпис -->
        <TextBlock Grid.Row="2" Text="Use arrow keys to move tiles. Goal: reach 2048." Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </Grid>
</Window>