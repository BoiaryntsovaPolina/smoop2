<Window x:Class="StoreApp.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Керування користувачами" Height="450" Width="600" 
        WindowStartupLocation="CenterOwner"
        MinHeight="350" MinWidth="450">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Користувачі системи" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Name="TxtMode" Margin="15,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <ListView Grid.Row="1" Name="LvUsers" Margin="0,0,0,15" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Логін" Width="200" DisplayMemberBinding="{Binding Username}"/>
                    <GridViewColumn Header="Роль" Width="150" DisplayMemberBinding="{Binding Role}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Додати нового" Click="BtnAdd_Click" Background="#4CAF50" Foreground="White" Width="140"/>
            <Button Content="Видалити обраних" Click="BtnRemove_Click" Margin="10,0,0,0" Background="#E57373" />
            <Button Content="Закрити" Click="BtnClose_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>