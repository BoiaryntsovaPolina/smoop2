<UserControl x:Class="StoreApp.Views.InvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:StoreApp.ViewModels"
             xmlns:helpers="clr-namespace:StoreApp.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <helpers:InvoiceTypeToStringConverter x:Key="TypeConverter"/>
        <helpers:InvoiceTotalColorConverter x:Key="TotalConverter"/>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">

            <Button Content="Створити" Command="{Binding CreateCommand}" 
                    Width="120" Height="30"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Деталі" Command="{Binding ViewCommand}" 
                    Width="120" Height="30" Margin="10,0,0,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Редагувати" Command="{Binding EditCommand}" 
                    Width="120" Height="30" Margin="10,0,0,0"/>

            <Button Content="Видалити" Command="{Binding DeleteCommand}" 
                    Width="120" Height="30" Margin="10,0,0,0"
                    Background="#EF9A9A" BorderBrush="#E57373"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Invoices}" SelectedItem="{Binding Selected}" 
                  BorderBrush="#DDDDDD" BorderThickness="1">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Number}" Width="80"/>

                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>

                    <GridViewColumn Header="Тип операції" Width="180" 
                                    DisplayMemberBinding="{Binding Type, Converter={StaticResource TypeConverter}}"/>

                    <GridViewColumn Header="Клієнт / Постачальник" DisplayMemberBinding="{Binding Customer}" Width="220"/>

                    <GridViewColumn Header="Сума" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource TotalConverter}}"
                                           Foreground="{Binding Converter={StaticResource TotalConverter}, ConverterParameter=Color}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>