<Window x:Class="StoreApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:StoreApp.Views"
        xmlns:vm="clr-namespace:StoreApp.ViewModels"
        mc:Ignorable="d"
        Title="StoreApp" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="500">

    <DockPanel>
        <Border x:Name="TopBorder" DockPanel.Dock="Top" Padding="15,10" Background="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="StoreApp" FontWeight="Bold" FontSize="18" Foreground="#333333"/>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="TxtUser" 
                           Text="Користувач: Admin" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="14" FontWeight="SemiBold" Foreground="#444444"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <Button Content="Змінити режим" Click="BtnChangeMode_Click" Width="120"
                            ToolTip="Вийти в меню вибору режиму (Home/Business)"/>

                    <Button x:Name="BtnManageUsers" Content="Користувачі" Click="BtnManageUsers_Click" 
                            Width="120" Margin="10,0,0,0" Background="#FFF9C4"
                            Visibility="Collapsed"/>

                    <Button Content="Вийти" Click="Logout_Click" Width="100" Margin="10,0,0,0"
                            Background="#FFCDD2" BorderBrush="#E57373"/>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Margin="5">
            <TabItem Header="📦 Товари" FontSize="14" Padding="10,5">
                <views:ProductsView DataContext="{Binding ProductsVM}"/>
            </TabItem>

            <TabItem x:Name="TabInvoices" Header="📄 Накладні" FontSize="14" Padding="10,5">
                <views:InvoicesView DataContext="{Binding InvoicesVM}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>