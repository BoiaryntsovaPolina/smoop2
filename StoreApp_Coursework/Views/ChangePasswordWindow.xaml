<Window x:Class="StoreApp.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Зміна пароля" Height="280" Width="380" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="З міркувань безпеки змініть пароль адміністратора!" 
                       Foreground="DarkRed" FontWeight="Bold" TextWrapping="Wrap" 
                       Margin="0,0,0,15" HorizontalAlignment="Center" TextAlignment="Center"/>

            <TextBlock Text="Новий пароль:"/>
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <PasswordBox Grid.Column="0" Name="PbNewPass" Height="25" VerticalContentAlignment="Center"/>
                <TextBox Grid.Column="0" Name="TxtNewPassVisible" Height="25" VerticalContentAlignment="Center" Visibility="Collapsed"/>

                <Button Grid.Column="1" Content="👁" Width="30" Height="25" Margin="5,0,0,0" 
                        Click="BtnEye_Click" Background="Transparent" BorderThickness="0"/>
            </Grid>

            <TextBlock Text="Підтвердіть пароль:"/>
            <PasswordBox Name="PbConfirmPass" Margin="0,5,0,15" Height="25" VerticalContentAlignment="Center"/>

            <Button Content="Змінити пароль" Click="BtnSave_Click" HorizontalAlignment="Center" 
                    Background="#4CAF50" Foreground="White" Width="150"/>
        </StackPanel>
    </Grid>
</Window>