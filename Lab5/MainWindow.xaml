<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="Авторизація" MinWidth="420" MinHeight="320" SizeToContent="Manual">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}" x:Key="SocialBtn">
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="8" Background="{StaticResource PrimaryBrush}" Padding="12" Margin="6">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ласкаво просимо" Foreground="White" FontSize="20" FontWeight="Bold" TextAlignment="Center" />
                <TextBlock Text="Увійдіть в акаунт або зареєструйтесь" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" Margin="6"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Реєстрація" Style="{StaticResource SecondaryButton}" Click="OpenRegister_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="4">
                    <TextBlock Text="Логін або Email" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtLogin" Style="{StaticResource TextBoxStyle}" />

                    <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="TxtPassword" Margin="4"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="4,8,4,4">
                        <Button Content="Увійти" Click="BtnLogin_Click" Style="{StaticResource PrimaryButton}"/>
                        <Button Content="Очистити" Click="BtnClear_Click" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>

                    <TextBlock Text="Або увійти через" Margin="4,10,4,2" FontStyle="Italic"/>
                    <WrapPanel Margin="4">
                        <Button Content="Google" Click="SocialGoogle_Click" Style="{StaticResource SocialBtn}" />
                        <Button Content="Facebook" Click="SocialFacebook_Click" Style="{StaticResource SocialBtn}" />
                        <Button Content="Twitter" Click="SocialTwitter_Click" Style="{StaticResource SocialBtn}" />
                    </WrapPanel>

                    <TextBlock x:Name="TxtStatus" Foreground="{StaticResource DangerBrush}" Margin="4,10,4,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>