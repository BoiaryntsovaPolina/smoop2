<Window x:Class="Lab5.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="Реєстрація" MinWidth="480" MinHeight="420">
    <Grid Margin="10">
        <Border Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Створіть обліковий запис" FontSize="16" FontWeight="Bold" Margin="4"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Ім'я користувача" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtUsername" Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtEmail" Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="TxtPass" Margin="4"/>

                        <TextBlock Text="Підтвердження пароля" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="TxtPassConfirm" Margin="4"/>

                        <StackPanel Orientation="Horizontal" Margin="4,8,4,4">
                            <Button Content="Зареєструватись" Click="BtnRegister_Click" Style="{StaticResource PrimaryButton}" />
                            <Button Content="Скасувати" Click="BtnCancel_Click" Style="{StaticResource SecondaryButton}" />
                        </StackPanel>

                        <TextBlock x:Name="TxtStatus" Foreground="{StaticResource DangerBrush}" Margin="4,6,4,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>