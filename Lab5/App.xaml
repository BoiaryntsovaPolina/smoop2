<Application x:Class="Lab5.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lab5"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Загальні ресурси проекту: кольори, пензлі, стилі для кнопок та полів вводу -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF2C6EB6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF4DA6FF"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFF7F9FC"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFDE3B3B"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FF222222"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="180"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4,6,4,0"/>
        </Style>

        <!-- Картка для форм -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Application.Resources>
</Application>
