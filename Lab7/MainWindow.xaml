<Window x:Class="Lab7_WpfBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Lab7_WpfBinding.ViewModels"
        Title="Конкурс - кандидати" Height="600" Width="900">

    <Window.Resources>
        <vm:MainViewModel x:Key="MainVM" />
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource MainVM}" />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header / Filter -->
        <DockPanel Grid.Row="0">
            <TextBlock Text="Список кандидатів" FontSize="18" FontWeight="Bold" DockPanel.Dock="Left" />

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <TextBox x:Name="FilterBox" Width="220" Margin="0,0,8,0" />
                <Button Content="Фільтр" Width="80" Click="Filter_Click" />
                <Button Content="Скинути" Width="80" Margin="8,0,0,0" Click="ClearFilter_Click" />
            </StackPanel>
        </DockPanel>

        <!-- Main area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left: List -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,8,8,8" Padding="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ListBox x:Name="CandidatesList" ItemsSource="{Binding Candidates}" SelectedItem="{Binding SelectedCandidate, Mode=TwoWay}" DisplayMemberPath="FullName" />

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button Content="Додати" Width="80" Margin="4" Click="Add_Click" />
                        <Button Content="Редагувати" Width="80" Margin="4" Click="Edit_Click" />
                        <Button Content="Видалити" Width="80" Margin="4" Click="Delete_Click" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right: Details -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="8,8,0,8" Padding="6">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Деталі кандидата" FontWeight="Bold" />

                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="П.І.П:" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding SelectedCandidate.FullName, Mode=OneWay}" />

                            <TextBlock Text="Дата народження:" FontWeight="SemiBold" Margin="0,8,0,0" />
                            <TextBlock Text="{Binding SelectedCandidate.BirthDate, StringFormat=d}" />

                            <TextBlock Text="Освіта:" FontWeight="SemiBold" Margin="0,8,0,0" />
                            <TextBlock Text="{Binding SelectedCandidate.Education}" />

                            <TextBlock Text="Мови:" FontWeight="SemiBold" Margin="0,8,0,0" />
                            <TextBlock Text="{Binding SelectedCandidate.Languages}" TextWrapping="Wrap" />

                            <TextBlock Text="Володіння комп'ютером:" FontWeight="SemiBold" Margin="0,8,0,0" />
                            <TextBlock Text="{Binding SelectedCandidate.HasComputerSkills, Converter={StaticResource BoolToYesNo}}" />

                            <TextBlock Text="Стаж:" FontWeight="SemiBold" Margin="0,8,0,0" />
                            <TextBlock Text="{Binding SelectedCandidate.ExperienceYears}" />

                            <TextBlock Text="Рекомендації:" FontWeight="SemiBold" Margin="0,8,0,0" />
                            <TextBlock Text="{Binding SelectedCandidate.HasRecommendations, Converter={StaticResource BoolToYesNo}}" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Text="Порада: змініть розмір вікна — UI адаптується (без абсолютних значень)." HorizontalAlignment="Center" Margin="0,8,0,0" />
    </Grid>
</Window>
