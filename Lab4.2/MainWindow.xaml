<Window x:Class="Lab4._2_chernovic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4._2_chernovic"
        mc:Ignorable="d"
        Title="BestOil - Облік продажів" Height="450" Width="650"
        MinWidth="500" MinHeight="400"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Автозаправка" Grid.Column="0" Margin="0,0,5,5">
            <StackPanel Margin="5">

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Пальне:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="FuelComboBox" Grid.Column="1" 
                              SelectionChanged="FuelComboBox_SelectionChanged"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Ціна, грн/л:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PriceTextBlock" Grid.Column="1" 
                               Text="0.00" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                    <Label Content="грн" Grid.Column="2" VerticalAlignment="Center"/>
                </Grid>

                <GroupBox Header="Кількість" Margin="0,15,0,0">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="LitersRadioButton" Content="Літри:" Grid.Column="0" 
                                         GroupName="FuelGroup" IsChecked="True" 
                                         Checked="FuelOption_Checked" Margin="0,0,10,0"/>
                            <TextBox x:Name="LitersTextBox" Grid.Column="1" Text="0" 
                                     TextChanged="FuelInput_TextChanged"/>
                            <Label Content="л" Grid.Column="2"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="AmountRadioButton" Content="Сума:" Grid.Column="0" 
                                         GroupName="FuelGroup" 
                                         Checked="FuelOption_Checked" Margin="0,0,10,0"/>
                            <TextBox x:Name="AmountTextBox" Grid.Column="1" IsEnabled="False" Text="0" 
                                     TextChanged="FuelInput_TextChanged"/>
                            <Label Content="грн" Grid.Column="2"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox x:Name="FuelTotalGroupBox" Header="До оплати (АЗС)" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="40">
                        <TextBlock x:Name="FuelTotalTextBlock" Text="0.00" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="Blue" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBlock x:Name="FuelTotalUnitTextBlock" Text="грн" 
                                   FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </GroupBox>

        <GroupBox Header="Міні-кафе" Grid.Column="1" Margin="5,0,0,5">
            <StackPanel>
                <StackPanel x:Name="CafeItemsPanel" Margin="5"/>

                <GroupBox Header="До оплати (Кафе)" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="40">
                        <TextBlock x:Name="CafeTotalTextBlock" Text="0.00" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="Blue" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBlock Text="грн" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="Загальний розрахунок" Margin="0,5,0,0">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Обчислити загальну суму" Grid.Column="0" Margin="10"
                        Click="CalculateTotal_Click"/>

                <Button Content="Новий клієнт / Обнулити" Grid.Column="1" Margin="10"
                        Click="ResetAll_Click"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10" Grid.ColumnSpan="2">
                    <Label x:Name="TotalGroupLabel" Content="Загальна сума:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TotalSumTextBlock" Text="0.00" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="Green" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock x:Name="TotalUnitTextBlock" Text="грн" 
                               FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Window>