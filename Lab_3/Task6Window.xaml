<Window x:Class="Lab_3.Task6Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_3"
        mc:Ignorable="d"
        Title="Завдання 6 — Кнопки 2/3" Height="360" Width="700" MinWidth="560" MinHeight="280">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- 2/3 -->
            <ColumnDefinition Width="*"/>
            <!-- 1/3 -->
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Кнопки займають 2/3 ширини вікна" FontWeight="Bold" Margin="0,0,0,8"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="6">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="ColorsPanel" ItemWidth="160" ItemHeight="48" Orientation="Horizontal">
                        <!-- Кнопки з назвами кольорів, margin 2.0 -->
                        <Button Content="Red" Margin="2.0" MinWidth="110" Padding="8" Background="Red" Foreground="White"/>
                        <Button Content="Green" Margin="2.0" MinWidth="110" Padding="8" Background="Green" Foreground="White"/>
                        <Button Content="Blue" Margin="2.0" MinWidth="110" Padding="8" Background="Blue" Foreground="White"/>
                        <Button Content="Yellow" Margin="2.0" MinWidth="110" Padding="8" Background="Yellow" Foreground="Black"/>
                        <Button Content="Orange" Margin="2.0" MinWidth="110" Padding="8" Background="Orange" Foreground="Black"/>
                        <Button Content="Purple" Margin="2.0" MinWidth="110" Padding="8" Background="Purple" Foreground="White"/>
                        <Button Content="Brown" Margin="2.0" MinWidth="110" Padding="8" Background="Brown" Foreground="White"/>
                        <Button Content="Gray" Margin="2.0" MinWidth="110" Padding="8" Background="Gray" Foreground="White"/>
                        <!-- додайте ще кнопок при потребі -->
                    </WrapPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <TextBlock Text="Додаткове місце (1/3 ширини)" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock TextWrapping="Wrap">Тут може бути допоміжна інформація, підказки або керування. Панель з кнопками ліворуч завжди займає 2/3 ширини вікна.</TextBlock>
        </StackPanel>
    </Grid>
</Window>
