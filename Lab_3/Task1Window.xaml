<Window x:Class="Lab_3.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_3"
        mc:Ignorable="d"
         Title="Завдання 1" Height="220" Width="360" MinWidth="320" MinHeight="180">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Завдання 1" FontSize="16" FontWeight="Bold" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label x:Name="MainLabel" Content="Початок роботи" FontSize="14" HorizontalContentAlignment="Center" Padding="8" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                <Button Content="Привіт" Click="HiButton_Click" MinWidth="100" Margin="6,0"/>
                <Button Content="До побачення" Click="ByeButton_Click" MinWidth="100" Margin="6,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
