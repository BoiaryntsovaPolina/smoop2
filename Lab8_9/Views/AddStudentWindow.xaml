<Window x:Class="Lab8.Views.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Lab8.Helpers"
        Title="Додати студента" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ім'я:" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="6,4"
                 Style="{StaticResource TextBoxWithValidation}"
                 helpers:WatermarkService.Watermark="Введіть ім'я, напр.: Ольга"
                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                 PreviewTextInput="Name_PreviewTextInput"
                 DataObject.Pasting="Name_Pasting"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="*" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Прізвище:" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="6,4"
                 Style="{StaticResource TextBoxWithValidation}"
                 helpers:WatermarkService.Watermark="Введіть прізвище, напр.: Іваненко"
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                 PreviewTextInput="Name_PreviewTextInput"
                 DataObject.Pasting="Name_Pasting"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="*" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Стать (Ч/Ж):" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="6,4"
                 Width="80"
                 Style="{StaticResource TextBoxWithValidation}"
                 helpers:WatermarkService.Watermark="Ч або Ж"
                 Text="{Binding Gender, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                 PreviewTextInput="Gender_PreviewTextInput"
                 DataObject.Pasting="Gender_Pasting"
                 MaxLength="1" />
        <TextBlock Grid.Row="2" Grid.Column="2" Text="*" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Вік:" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="6,4"
                 Width="120"
                 Style="{StaticResource TextBoxWithValidation}"
                 helpers:WatermarkService.Watermark="Число 16-100"
                 Text="{Binding AgeText, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                 PreviewTextInput="NumberOnly_PreviewTextInput"
                 DataObject.Pasting="NumberOnly_Pasting" />
        <TextBlock Grid.Row="3" Grid.Column="2" Text="*" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Name="OkButton" Content="OK" Width="80" Margin="0,0,8,0" Click="OkButton_Click"/>
            <Button Content="Скасувати" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
